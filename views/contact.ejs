<%- include('partials/header') %>

    <section id="contact-page">
        <div class="container">
            <h2 class="section-title visible" style="opacity: 1; transform: translateY(0);">Get In Touch</h2>
            <div class="contact-container">
                <div class="contact-info fade-up">
                    <p>I'm always open to discussing new projects, creative ideas or opportunities to be part of your
                        visions.</p>

                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <div>
                            <h4>Email Me</h4>
                            <a href="mailto:shamsur30rahman@gmail.com">shamsur30rahman@gmail.com</a>
                        </div>
                    </div>

                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <h4>Location</h4>
                            <p>Dhaka, Bangladesh</p>
                        </div>
                    </div>

                    <div class="contact-item">
                        <i class="fas fa-phone-alt"></i>
                        <div>
                            <h4>Call Me</h4>
                            <a href="tel:+8801600330415">+880 1600 330415</a>
                        </div>
                    </div>

                    <div style="margin-top: 30px;">
                        <h4>FAQ</h4>
                        <br>
                        <div class="faq-item">
                            <button class="faq-question">
                                Are you available for freelance?
                                <i class="fas fa-chevron-down"></i>
                            </button>
                            <div class="faq-answer">
                                <p>Yes, send me a message!</p>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="contact-form fade-up">
                    <form id="contactForm" action="/contact" method="POST">
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" placeholder="Your Name" required>
                        </div>
                        <div class="form-group">
                            <input type="email" name="email" class="form-control" placeholder="Your Email" required>
                        </div>
                        <div class="form-group">
                            <textarea name="message" class="form-control" placeholder="Message" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>